@model List<JadooTravel.Dtos.CategoryDtos.ResultCategoryDto>
@*
    Category Component
*@
<section class="pt-5 pt-md-9" id="service">
    <div class="container">
        <div class="position-absolute z-index--1 end-0 d-none d-lg-block">
            <img src="/public/assets/img/category/ChatGPT-5.png" style="max-width: 160px" alt="service" />
        </div>
        <div class="mb-7 text-center">
            <h5 class="text-secondary">CATEGORIES </h5>
            <h3 class="fs-xl-10 fs-lg-8 fs-7 fw-bold font-cursive text-capitalize">Our Interstellar Services</h3>
        </div>
        <div class="row justify-content-center">
            @foreach(var item in Model)
            {
                <div class="col-lg-3 col-sm-6 mb-6 d-flex align-items-stretch">
                    <div class="card service-card shadow-hover rounded-3 text-center align-items-center w-100">
                        <div class="card-body p-xxl-5 p-4">
                            <img src="/public/assets/img/category/@item.IconUrl" width="75" alt="Service" />
                            <h4 class="mb-3">@item.CategoryName</h4>
                            <p class="mb-0 fw-medium">@item.Description</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div><!-- end of .container-->
</section>
