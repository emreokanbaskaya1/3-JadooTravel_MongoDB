@model List<JadooTravel.Dtos.DestinationDtos.ResultDestinationDto>
@*
Destination
*@

<section class="pt-5" id="destination" style="position: relative;">
    <div class="container">
        <div class="mb-7 text-center" style="position: relative;">
            <h5 class="text-secondary">Top Selling</h5>
            <h3 class="fs-xl-10 fs-lg-8 fs-7 fw-bold font-cursive text-capitalize">Top Destinations</h3>
            <!-- Astronaut image - positioned next to the title -->
            <div class="position-absolute" style="right: -50px; top: 50%; transform: translateY(-50%); width: 120px; z-index: 10;">
                <img src="/public/assets/img/dest/ChatGPT-6.png" alt="destination" style="width: 120px; height: auto;" />
            </div>
        </div>
        <div class="row">
            @foreach(var item in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card overflow-hidden shadow">
                        <img class="card-img-top" src="/public/assets/img/dest/@item.ImageUrl" alt="Rome, Italty" />
                        <div class="card-body py-4 px-3">
                            <div class="d-flex flex-column flex-lg-row justify-content-between mb-3">
                                <h4 class="text-secondary fw-medium"><a class="link-900 text-decoration-none stretched-link" href="#!">@item.CityCountry</a></h4><span class="fs-1 fw-medium">@item.Price TL</span>
                            </div>
                            <div class="d-flex align-items-center"> <img src="/public/assets/img/dest/ChatGPT-4.png"  width="50" alt="navigation" /><span class="fs-0 fw-medium">@item.DayNight</span></div> 
                        </div>
                    </div>
                </div>
            }
        </div>
    </div><!-- end of .container-->
</section>
